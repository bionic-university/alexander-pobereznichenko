{% extends '@BionicUniversityProject/Admin/index.html.twig' %}

{% form_theme form 'BionicUniversityUserBundle:Form:fields.html.twig' %}

{% block content %}
    <h1>Добавить пользователя</h1>

    {{ form_start(form) }}

    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password.pass) }}
    {{ form_row(form.password.confirm) }}

    {% if is_granted('ROLE_ADMIN') %}
        {{ form_errors(form.roles) }}
        <div class="form-group">
            {{ form_label(form.roles, null, {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
            <div class="col-sm-8">{{ form_widget(form.roles) }}</div>
        </div>
    {% endif %}

    {{ form_end(form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('user') }}">назад к списку польхователей</a>
        </li>
    </ul>
{% endblock %}

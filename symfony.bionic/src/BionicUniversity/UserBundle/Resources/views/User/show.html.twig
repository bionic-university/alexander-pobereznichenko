{% extends '@BionicUniversityProject/Layout/mainlayout.html.twig' %}

{% block content %}
    <h1>{{ entity.username }}</h1>

    <table class="record_properties table table-bordered">
        <tbody>
        <tr>
            <th>Username</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        </tbody>
    </table>

    <div class="record_actions clearfix">
        <div class="pull-left">
            <a class="btn btn-bg" href="{{ path('user_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="pull-left">
                {{ form_start(delete_form) }}
                {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-bg' }}) }}
                {{ form_end(delete_form) }}
            </div>
        {% endif %}
    </div>
{% endblock %}

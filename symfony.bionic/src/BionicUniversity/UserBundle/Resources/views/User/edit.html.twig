{% extends '@BionicUniversityProject/Layout/mainlayout.html.twig' %}

{% form_theme edit_form 'BionicUniversityUserBundle:Form:fields.html.twig' %}

{% block content %}
    <h1>Редактировать учетную запись</h1>

    {{ form_start(edit_form) }}

    {{ form_start(edit_form) }}
    {{ form_row(edit_form.username) }}
    {{ form_row(edit_form.email) }}
    {{ form_row(edit_form.password.pass) }}
    {{ form_row(edit_form.password.confirm) }}

    {% if is_granted('ROLE_ADMIN') %}
        {{ form_errors(edit_form.roles) }}
        <div class="form-group">
        {{ form_label(edit_form.roles, null, {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
        <div class="col-sm-8">{{ form_widget(edit_form.roles) }}</div>
        </div>
    {% endif %}

    {{ form_end(edit_form) }}

    <div class="row">
        <div class="col-sm-1 col-sm-offset-2">
            {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-warning btn-xs' }}) }}
            {{ form_end(delete_form) }}
        </div>
        <div class="col-sm-4">
            <a href="{{ path('user') }}">назад к списку ролей</a>
        </div>
    </div>
{% endblock %}
